<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d [%t] %c: %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
    
        <!-- Http Logger shows wire traffic on DEBUG. -->
        <!--Logger name="org.mule.service.http.impl.service.HttpMessageLogger" level="DEBUG" /-->
        <Logger name="org.mule.service.http" level="WARN"/>
        <Logger name="org.mule.extension.http" level="WARN"/>
        
         <!-- Reduce startup noise -->         
        <Logger name="com.mulesoft.mule.runtime.plugin" level="WARN"/>               
        <Logger name="org.mule.maven.client" level="WARN"/>
        <Logger name="org.mule.runtime.core.internal.util" level="WARN"/>
        <Logger name="org.quartz" level="WARN"/>
        <Logger name="org.mule.munit.plugins.coverage.server" level="WARN"/>        
               
        <!-- Mule logger -->        
        <Logger name="org.mule.runtime.core.internal.processor.LoggerMessageProcessor" level="INFO"/>  

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>